{
  "Components": [
    {
      "type": "Kubernetes",
      "spec": {
        "name": "database",
        "resources": [
          {
            "kind": "PersistentVolumeClaim",
            "configPath": "src/components/database/.kube/pvc.yml"
          },
          {
            "kind": "Service",
            "configPath": "src/components/database/.kube/service.yml"
          },
          {
            "kind": "Deployment",
            "configPath": "src/components/database/.kube/deployment.yml",
            "onBurndown": "delete"
          }
        ]
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "api",
        "resources": [
          {
            "kind": "Service",
            "resourceConfigPath": "src/components/api/.kube/"
          },
          {
            "kind": "Deployment",
            "resourceConfigPath": "src/components/api/.kube/"
          }
        ]
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "ingress",
        "resourceConfigPath": "src/components/registry/.kube/",
        "resources": []
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "build",
        "resources": [
          {
            "kind": "Service",
            "resourceConfigPath": "src/components/build/.kube/service.yml"
          },
          {
            "kind": "Deployment",
            "resourceConfigPath": "src/components/build/.kube/deployment.yml"
          }
        ]
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "message",
        "resources": [
          {
            "kind": "PersistentVolumeClaim",
            "configPath": "src/components/message/.kube/pvc.yml"
          },
          {
            "kind": "Service",
            "configPath": "src/components/message/.kube/service.yml"
          },
          {
            "kind": "Deployment",
            "configPath": "src/components/message/.kube/deployment.yml"
          }
        ]
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "notification",
        "resources": [
          {
            "kind": "Service",
            "configPath": "src/components/notification/.kube/service.yml"
          },
          {
            "kind": "Deployment",
            "configPath": "src/components/notification/.kube/deployment.yml"
          }
        ]
      }
    },
    {
      "type": "Kubernetes",
      "spec": {
        "name": "registry",
        "resources": [
          {
            "kind": "ConfigMap",
            "configPath": "src/components/registry/.kube/service.yml",
            "onBurndown": "delete"
          },
          {
            "kind": "Deployment",
            "configPath": "src/components/registry/.kube/deployment.yml",
            "onBurndown": "delete"
          },
          {
            "kind": "Service",
            "configPath": "src/components/registry/.kube/service.yml"
          }
        ]
      }
    }
  ]
}